<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nmedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Widget.AppTheme.LikeCheckbox"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_likes_24</item>
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.ShareCheckbox"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_button_share_24</item>
        <item name="iconTint">@color/share_color</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.Option"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">@dimen/avatar_size</item>
        <item name="android:minHeight">@dimen/avatar_size</item>
    </style>

    <style name="Widget.AppTheme.PlayButton"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@android:color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">@dimen/avatar_size</item>
        <item name="android:minHeight">@dimen/avatar_size</item>
    </style>
</resources>